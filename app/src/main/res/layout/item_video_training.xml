<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:padding="@dimen/margin_short"
    android:background="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/container_video_training"
        app:cardCornerRadius="@dimen/border_radius_card"
        app:cardBackgroundColor="@color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/bg_rounden_card_gradient"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/margin_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_training_video_cover"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:contentDescription="@string/general_action_content_desc"
                    android:src="@drawable/xplor_tickets_500" />

                <ImageView
                    android:id="@+id/play_video_quizz_video"
                    android:contentDescription="@string/general_action_content_desc"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="40.dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_play_video"
                    app:srcCompat="@drawable/icon_play_video" />
                <ImageView
                    android:background="@color/btn_green"
                    android:id="@+id/download_video_quizz_video"
                    android:contentDescription="@string/general_action_content_desc"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="40.dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_download"
                    app:srcCompat="@drawable/ic_download"
                    app:tint="@color/white" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:background="@color/transparent"
                android:paddingVertical="@dimen/margin_short"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name_quizz_video"
                    style="@style/monse_normal_white"
                    android:text="@string/video_quiz_availability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/availabilityContainer_quizz_video"
                android:background="@color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/monse_normal_white"
                    android:text="@string/video_quiz_availability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:paddingHorizontal="@dimen/margin4"
                    android:id="@+id/dealine_quizz_video"
                    style="@style/monse_normal_italic"
                    android:text="17/10/24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:background="@color/transparent"
                android:paddingVertical="@dimen/margin_short"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/monse_normal_white"
                    android:text="@string/video_quiz_earn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:paddingHorizontal="@dimen/margin4"
                    android:id="@+id/points_quizz_video"
                    style="@style/monse_normal_white"
                    android:text="150"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    style="@style/monse_normal_white"
                    android:text="ppt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:background="@color/transparent"
                android:paddingVertical="@dimen/margin_short"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_quiz_quizz_video"
                    android:paddingHorizontal="@dimen/margin50"
                    android:textColor="@color/white"
                    android:background="@drawable/button_red_rounded"
                    android:text="@string/quiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_marginBottom="@dimen/margin_default"
                android:id="@+id/quizz_completed_quizz_video"
                android:background="@color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    style="@style/monse_normal_white"
                    android:src="@drawable/icon_checl"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:paddingHorizontal="@dimen/margin4"
                    android:id="@+id/txt_done_quizz_video"
                    style="@style/monse_normal_italic"
                    android:text="@string/quiz_completed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>