<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:padding="@dimen/margin_default"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_park_description"
            android:text="details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/btn_download_video_training_park"
            android:padding="@dimen/margin_short"
            android:layout_gravity="end"
            android:layout_marginVertical="@dimen/margin_short"
            android:gravity="end|center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginEnd="@dimen/margin_short"
                android:text="@string/Descargar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:tint="@color/white"
                android:background="@drawable/button_green_border_small"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_download"
                tools:srcCompat="@drawable/ic_download"
                tools:ignore="UseAppTint" />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_video_training_park"
            android:layout_margin="@dimen/margin_short"
            app:cardCornerRadius="@dimen/border_radius_card"
            app:cardBackgroundColor="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_video_training_thumbnail"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="false"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:contentDescription="@string/general_action_content_desc"
                    android:src="@drawable/xplor_tickets_500" />
                <ImageView
                    android:id="@+id/iv_video_training_play"
                    android:contentDescription="@string/general_action_content_desc"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="40.dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_play_video"
                    app:srcCompat="@drawable/icon_play_video"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
