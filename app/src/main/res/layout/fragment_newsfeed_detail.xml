<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/large_text"
                android:id="@+id/txt_title"
                style="@style/monse_bold_white"
                tools:text="titulo"
                android:text="@string/section_newsfeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:contentDescription="@string/general_lore_content_desc"
            android:tint="@color/white"
            android:id="@+id/btn_back"
            android:translationZ="10dp"
            android:layout_marginHorizontal="@dimen/margin_short"
            android:layout_marginVertical="@dimen/margin_default"
            android:layout_gravity="start|center"
            android:src="@drawable/ic_arrow_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            tools:ignore="UseAppTint" />
    </FrameLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginVertical="@dimen/margin_short"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_news_detail"
                android:src="@drawable/xplor"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <LinearLayout
                android:background="@color/white"
                android:padding="@dimen/margin_default"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_title_new"
                    style="@style/monse_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineHeight="20dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/title"
                    tools:text="Xoximilco te regala una cena" />
                <TextView
                    android:id="@+id/txt_subtitle_new"
                    style="@style/monse_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineHeight="10dp"
                    android:textColor="@color/btn_green"
                    android:textSize="@dimen/small_text"
                    tools:text="Xoximilco te regala una cena" />
                <TextView
                    android:layout_marginVertical="@dimen/margin_default"
                    android:id="@+id/txt_desc_new"
                    style="@style/monse_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/generalTextColor"
                    android:textSize="@dimen/general_text"
                    tools:text="Xoximilco te regala una cena" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>