<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="@dimen/margin_short"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <com.xcaret.loyaltyreps.view.base.TicketBaseTopBottom
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/bg_home_status"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingVertical="@dimen/margin50"
            android:id="@+id/container_language"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingHorizontal="@dimen/margin_default"
            android:paddingTop="@dimen/margin_default"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
                <ImageView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/txt_park_info_language"
                    android:id="@+id/txt_park_info_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/content_training_img"
                    android:scaleType="centerInside"
                    android:src="@drawable/camioneta_menu_icon" />

                <TextView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    style="@style/monse_bold"
                    android:textSize="@dimen/title"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/txt_park_info_language"
                    android:textAppearance="@style/monse_bold"
                    android:text="@string/section_pickup"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


 </androidx.constraintlayout.widget.ConstraintLayout>
