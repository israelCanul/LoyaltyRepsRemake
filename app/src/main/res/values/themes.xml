<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LoyaltyV2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/black</item>


    </style>

    <style name="Theme.LoyaltyV2" parent="Base.Theme.LoyaltyV2">

    </style>

    <style name="Theme.Loyalty.Login" parent="Base.Theme.LoyaltyV2">
        <!--        status bar color -->
        <item name="android:statusBarColor">@color/colorPrimary</item><!-- System Top Bar -->
        <item name="android:navigationBarColor">@color/colorPrimary</item><!-- bottom navigation -->

        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <!--   for animation      -->
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="Theme.Loyalty.Fullscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:statusBarColor">@color/colorPrimary</item><!-- System Top Bar -->
        <item name="android:navigationBarColor">@color/colorPrimary</item><!-- bottom navigation -->
    </style>

    <style name="ThemeOverlay.Loyalty.FullscreenContainer" parent="">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.LoyaltyV2.Fullscreen" parent="Theme.LoyaltyV2">
        <item name="android:actionBarStyle">@style/Widget.Theme.LoyaltyV2.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.LoyaltyReps.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

</resources>